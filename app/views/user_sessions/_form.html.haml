= form_tag user_sessions_path, method: :post do |f|
  %div.form-group
    = label :user, :email
    = text_field :user, :email, class: 'form-control'
  %div.form-group
    = label :user, :password
    = password_field :user, :password, class: 'form-control'
  .actions
    = submit_tag t('user_sessions.new.submit'), class: 'btn btn-primary'
