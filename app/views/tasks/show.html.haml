%p#notice= notice
%h1= @task.title
%div.panel.panel-default
  %div.panel-heading
    = label :task, :description
  %div.panel-body
    = @task.description
%div.panel.panel-default
  %div.panel-heading
    =label :task, t('.information')
  %table.table
    %tr
      %td= label :task, :status
      %td= @task.status_i18n
    %tr
      %td= label :task, :priority
      %td= @task.priority_i18n
    %tr
      %td= label :task, :deadline
      %td= l(@task.deadline, format: :long)

= link_to t('common.edit'), edit_task_path(@task), class: 'btn btn-warning'
= link_to t('common.back'), tasks_path, class: 'btn btn-default'
