%h1 Listing tasks

%table{ border: '1' }
  %thead
    %tr
      %th title
      %th status
      %th priority
      %th deadline
      %th actions
  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.title
        %td= task.status
        %td= task.priority
        %td= task.deadline
        %td 
          = link_to 'Show', task
          = link_to 'Edit', edit_task_path(task)
          = link_to 'Destroy', task, method: :delete
%br

= link_to 'New Task', new_task_path
