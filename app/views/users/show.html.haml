- if notice
  %div.alert.alert-info{ role: 'alert' }= notice

%h1= @user.name

%div.panel.panel-default
  %div.panel-heading= label :user, t('.information')
  %table.table
    %tr
      %td= label :user, :email
      %td= @user.email
    %tr
      %td= label :user, :updated_at
      %td= @user.updated_at
    %tr
      %td= label :user, :created_at
      %td= @user.created_at
  - if @user.avatar.attached?
    .panel-body
      = label :user, :avatar
      = image_tag(url_for(@user.avatar), class: 'img-responsive')
= link_to t('common.back'), :back, class: 'btn btn-default'

%br
%h3= t('.task_list')
= render partial: 'task_list', locals: { tasks: @tasks }
